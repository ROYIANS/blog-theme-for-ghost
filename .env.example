# Halo CMS Configuration
# The base URL of your Halo instance
NEXT_PUBLIC_HALO_API_URL=http://localhost:8090

# Halo Personal Access Token (PAT)
# Generate from: Halo Admin -> User Center -> Personal Access Tokens
HALO_API_TOKEN=pat_your_token_here

# Site Configuration
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_SITE_NAME=Halo Blog

# Optional: Enable features
NEXT_PUBLIC_ENABLE_SEARCH=true
NEXT_PUBLIC_ENABLE_COMMENTS=false